<Window x:Class="CRM.WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
              xmlns:local="clr-namespace:CRM.WPF"
        xmlns:controls="clr-namespace:CRM.WPF.Controls"
        mc:Ignorable="d"
        Title="SD-SOFT Feladatkezelő" Height="450" Width="800" MinHeight="450" MinWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="*"/>

        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition  Height="*"/>

        </Grid.RowDefinitions>

        <controls:NavigationBar  Grid.RowSpan="2" Grid.Row="0" Grid.Column="0"  DataContext="{Binding Navigator}"  />
        <TextBlock Background="Gray" Grid.Row="0" Grid.Column="1"   Text=""/>

        <ContentControl Grid.Row="1" Grid.Column="1" Content="{Binding Navigator.CurrentViewModel}">

        </ContentControl>

    </Grid>
</Window>