<UserControl x:Class="CRM.WPF.Controls.NavigationBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CRM.WPF.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" Background="Gray"
             d:MinHeight="450" d:MinWidth="800"
             xmlns:navigator="clr-namespace:CRM.WPF.State.Navigators"
             
            >


    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition Height="40"/>

            <RowDefinition Height="40"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="40"/>
        

            <RowDefinition Height="*"/>
            <RowDefinition Height="20"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="48.667"/>
            <ColumnDefinition Width="81.333"/>
            <ColumnDefinition Width="*"/>

        </Grid.ColumnDefinitions>




        <Image Grid.Row="0" Grid.Column="0"  Source="/Controls/whiteLogo.png" Grid.ColumnSpan="2" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <Button Grid.Column="0" Grid.Row="2" x:Name="homeMenuBtn" Content="KEZDŐ OLDAL" Background="Gray" Foreground="White" Command="{Binding UpdateCurrentViewModelCommand}" CommandParameter="{x:Static navigator:ViewType.Home}" Grid.ColumnSpan="2" Click="Active"/>
        <Button Grid.Column="0" Grid.Row="3" x:Name="messageMenuBtn" Content="ÜZENETEK" Background="Gray" Foreground="White" Command="{Binding UpdateCurrentViewModelCommand}" CommandParameter="{x:Static navigator:ViewType.Message}" Grid.ColumnSpan="2"/>
        <Button Grid.Column="0" Grid.Row="4" x:Name="taskMenuBtn" Content="FELADATOK" Background="Gray" Foreground="White" Command="{Binding UpdateCurrentViewModelCommand}" CommandParameter="{x:Static navigator:ViewType.Task}" Grid.ColumnSpan="2"/>
        <Button Grid.Column="0" Grid.Row="5" x:Name="overViewMenuBtn" Content="ÁTTEKINTÉS" Background="Gray" Foreground="White" Command="{Binding UpdateCurrentViewModelCommand}" CommandParameter="{x:Static navigator:ViewType.OverView}" Grid.ColumnSpan="2"/>
        <Button Grid.Column="0" Grid.Row="6" x:Name="logOutMenuBtn" Content="KIJELENTKEZÉS" Background="Gray" Foreground="White" Command="{Binding UpdateCurrentViewModelCommand}" CommandParameter="{x:Static navigator:ViewType.LogOut}" Grid.ColumnSpan="2"/>

        <TextBlock Grid.Column="0" Grid.Row="2"  x:Name="topicalPage" Background="White"  Width="5" HorizontalAlignment="Left"/>
        <TextBlock Grid.Column="0" Grid.Row="9"  Text="Version 1.02 " FontSize="10" Foreground="White" HorizontalAlignment="Left" Grid.ColumnSpan="2" Margin="37,0,0,0"/>


    </Grid>
</UserControl>
